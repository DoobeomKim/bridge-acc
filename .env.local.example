# finAPI Configuration
# Get these from https://oba.prime.vivid.money/
FINAPI_CLIENT_ID=your_client_id_here
FINAPI_CLIENT_SECRET=your_client_secret_here
FINAPI_BASE_URL=https://oba.prime.vivid.money

# Application URL (for OAuth redirect)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Encryption key for storing tokens (generate a random string)
TOKEN_ENCRYPTION_KEY=your_32_character_encryption_key

# Anthropic API (for AI quote consulting)
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your_api_key_here

# Database (Vercel Postgres)
# This will be automatically set by Vercel when you create a Postgres database
DATABASE_URL=postgres://username:password@host/database

# Vercel Blob Storage
# This will be automatically set by Vercel when you enable Blob storage
BLOB_READ_WRITE_TOKEN=vercel_blob_token_here
